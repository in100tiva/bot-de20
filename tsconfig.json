{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",                          // Onde está seu código TS
    "outDir": "./dist",                         // Onde o JS compilado será salvo

    /* Environment Settings */
    "module": "NodeNext",                       // Necessário para projetos "type": "module"
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],                          // Garante que o Node seja reconhecido

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking Options */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "strict": true,
    "verbatimModuleSyntax": false,              // Alterado para false para facilitar imports de pacotes
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,                     // Garante compatibilidade entre módulos
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],                      // Diz ao TS para olhar apenas a pasta src
  "exclude": ["node_modules", "dist"]           // Ignora o que não deve ser compilado
}